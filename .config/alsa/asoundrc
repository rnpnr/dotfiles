pcm.!default {
	type asym
	playback.pcm pcm.output
	capture.pcm {
		type plug
		slave.pcm pcm.dsnooper
	}
}

pcm.output {
	type dmix
	ipc_key 1024
	slave {
		pcm "hw:0,0"
		buffer_size 8192
		format S16_LE
		period_size 1024
		period_time 0
		rate 48000
	}
}

# alias actual mic card to mic
pcm.mic {
	type hw
	card Snowball
}

pcm.dsnooper {
	type dsnoop
	ipc_key 1488
	slave {
		pcm "mic"
		channels 2
		rate 48000
		period_size 1024
		buffer_size 4096
		period_time 0
	}
}

# give mic output a volume control
pcm.micvol {
	type softvol
	slave.pcm pcm.output
	control.name "MicVol"
}
ctl.MicVol {
	type hw
	card Snowball
}

# software volume
pcm.softvol {
	type softvol
	slave.pcm pcm.output
	control.name "SoftMaster"
}

# mpd volume control
pcm.mpd {
	type softvol
	slave.pcm pcm.output
	control.name "MPD"
}

# mpv volume control
pcm.mpv {
	type softvol
	slave.pcm pcm.output
	control.name "MPV"
}
